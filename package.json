{
	"name": "rage-boilerplate",
	"workspaces": [
		"apps/client",
		"apps/server",
		"apps/shared",
		"apps/webview"
	],
	"scripts": {
		"start": "cd server && ragemp-server.exe",
		"[Build]": "",
		"build:core": "pnpm exec tsx scripts/build.ts",
		"build:webview": "cd apps/webview && pnpm run build",
		"build:all": "pnpm run build:core && pnpm run build:webview",
		"postinstall": "pnpm run prisma:generate && cd server && npx ragemp-pkg release ",
		"[Dev]": "",
		"watch": "node scripts/watch.mjs",
		"dev:webview": "cd apps/webview && pnpm run dev",
		"[Database]": "",
		"prisma:generate": "bunx prisma generate",
		"prisma:apply:migrations": "bunx prisma migrate dev",
		"prisma:reset:migrations": "bunx prisma migrate reset"
	},
	"prisma": {
		"seed": "tsx prisma/seed.ts"
	},
	"dependencies": {
		"bcryptjs": "^3.0.2",
		"chalk": "^5.4.1",
		"chokidar": "^4.0.3",
		"dotenv": "^16.4.5",
		"lodash": "^4.17.21",
		"prisma": "5.5.2",
		"prisma-json-types-generator": "^3.1.1",
		"rage-rpc": "github:Yoegibby/rage-rpc#rage1.1_fixes",
		"ragemp-pkg": "latest",
		"winston": "^3.17.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@prisma/client": "5.5.2",
		"@ragempcommunity/types-cef": "latest",
		"@ragempcommunity/types-client": "latest",
		"@ragempcommunity/types-server": "latest",
		"@types/lodash": "^4.17.13",
		"@types/node": "^20.16.11",
		"concurrently": "^9.1.0",
		"esbuild": "latest",
		"esbuild-copy-static-files": "^0.1.0",
		"esbuild-plugin-fileloc": "^0.0.6",
		"husky": "^9.1.7",
		"tsx": "^4.20.3"
	},
	"peerDependencies": {
		"typescript": "^5.6.3"
	},
	"trustedDependencies": [
		"@biomejs/biome",
		"esbuild"
	]
}
